<html>
	<head>
		<title>Produtos :: Inserir</title>
	</head>
	<body>
		<h1>Incluir Produto</h1>
    {{ parametros.msg | raw}}
		<hr>
    {{ this.Form.create('', {'url': 'add'}) | raw }}
    {{ this.Form.input('nome', {'label': 'Nome: ', 'id': 'nomeProduto', 'required': 'true'}) | raw }}
			<label>Quantidade:</label>
			0<hr>
    {{ this.Form.end({'label': 'Inserir', 'id': 'inserirProduto'}) | raw }}
    {{ this.Html.link('Cancelar', {'controller': 'homes', 'action': 'index'}) | raw }}
	</body>
  
  <script>
    window.addEventListener('load', function(){
      document.getElementById('nomeProduto').focus();
      document.getElementById('nomeProduto').value = '';  
    });  
  </script>
</html>